<Window x:Class="QuanLySinhVien.LocSinhVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kết Quả Lọc Sinh Viên" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid Name="dgKetQua" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SV" Binding="{Binding MaSV}" Width="80"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding TenSV}" Width="150"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="80"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>