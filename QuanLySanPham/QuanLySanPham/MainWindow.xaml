<Window x:Class="QuanLySanPham.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý sản phẩm" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Label" x:Key="labelsp">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Blue"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#ffc"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        

        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="myheader" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Canvas>
        <Label Content="QUẢN LÝ SẢN PHẨM" Canvas.Left="280" Canvas.Top="14" 
               FontSize="20" FontWeight="Bold" Foreground="Blue"/>

        <Label Style="{StaticResource labelsp}" Content="Mã sản phẩm" Canvas.Left="120" Canvas.Top="80"/>
        <Label Style="{StaticResource labelsp}" Content="Tên sản phẩm" Canvas.Left="120" Canvas.Top="110"/>
        <Label Style="{StaticResource labelsp}" Content="Số lượng" Canvas.Left="120" Canvas.Top="140"/>
        <Label Style="{StaticResource labelsp}" Content="Giá tiền" Canvas.Left="120" Canvas.Top="170"/>
        <Label Style="{StaticResource labelsp}" Content="Thành tiền" Canvas.Left="120" Canvas.Top="200"/>

        <TextBox Name="txtmasp" Canvas.Left="250" Canvas.Top="80" Width="120" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="txttensp" Canvas.Left="250" Canvas.Top="110" Width="120" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="txtsoluong" Canvas.Left="250" Canvas.Top="140" Width="120" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="txtgiatien" Canvas.Left="250" Canvas.Top="170" Width="120" Height="25" VerticalContentAlignment="Center"/>
        <TextBox Name="txtthanhtien" Canvas.Left="250" Canvas.Top="200" Width="120" Height="25" VerticalContentAlignment="Center" IsReadOnly="True"/>

        <DataGrid x:Name="dgDanhsachSP" Height="240" Width="680" AutoGenerateColumns="False"
                  Canvas.Left="60" Canvas.Top="254"
                  SelectionChanged="SelectSanpham" ColumnHeaderStyle="{StaticResource myheader}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding masp}" Width="100"/>
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding tensp}" Width="150"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding soluong}" Width="100"/>
                <DataGridTextColumn Header="Giá tiền" Binding="{Binding giatien}" Width="100"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding thanhtien, StringFormat={}{0:N0}}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Red"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Thêm" Canvas.Left="60" Canvas.Top="520" Click="btnThem_Click"/>
        <Button Content="Xóa" Canvas.Left="150" Canvas.Top="520" Click="btnXoa_Click"/>
        <Button Content="Cập nhật" Canvas.Left="240" Canvas.Top="520" Click="btnCapnhat_Click"/>
        <Button Content="Xóa textbox" Canvas.Left="330" Canvas.Top="520" Click="btnXoatextbox_Click" Width="100"/>
        <Button Content="Lọc sản phẩm" Canvas.Left="440" Canvas.Top="520" Click="btnCuaso2_Click" Width="100"/>
        <Button Content="Đóng" Canvas.Left="640" Canvas.Top="520" Click="btnDong_Click"/>

        <Label Name="lbl_eMasp" Canvas.Left="400" Canvas.Top="80" Foreground="Red"/>
        <Label Name="lbl_eTensp" Canvas.Left="400" Canvas.Top="110" Foreground="Red"/>
        <Label Name="lbl_eSoluong" Canvas.Left="400" Canvas.Top="140" Foreground="Red"/>
        <Label Name="lbl_eGiatien" Canvas.Left="400" Canvas.Top="170" Foreground="Red"/>
    </Canvas>
</Window>