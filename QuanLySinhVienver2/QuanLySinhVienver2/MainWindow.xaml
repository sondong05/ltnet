<Window x:Class="QuanLySinhVienver2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLySinhVienver2"
        mc:Ignorable="d"
        Title="Quản Lý Sinh Viên" Height="600" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Label" x:Key="labelsp">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Blue"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#ffc"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="myheader" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="Blue"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Canvas>
        <Label Content="QUẢN LÝ SINH VIÊN" Canvas.Left="280" FontSize="20" FontWeight="Bold" 
               Foreground="Blue" Canvas.Top="14" HorizontalAlignment="Left" VerticalAlignment="Top" Width="260"/>

        <Label Style="{StaticResource labelsp}" Content="Mã sinh viên" Canvas.Left="120" Canvas.Top="80"/>
        <Label Style="{StaticResource labelsp}" Content="Tên sinh viên" Canvas.Left="120" Canvas.Top="110"/>
        <Label Style="{StaticResource labelsp}" Content="Ngày sinh" Canvas.Left="120" Canvas.Top="140"/>
        <Label Style="{StaticResource labelsp}" Content="Giới tính" Canvas.Left="120" Canvas.Top="170"/>
        <Label Style="{StaticResource labelsp}" Content="Địa chỉ" Canvas.Left="120" Canvas.Top="200"/>
        <Label Content="Nhập Mã SV tìm:" Canvas.Left="450" Canvas.Top="215" 
               Style="{StaticResource labelsp}" FontWeight="Bold"/>

        <TextBox Canvas.Left="250" Name="txtMaSV" Canvas.Top="80" Width="120"/>

        <TextBox Canvas.Left="250" Name="txtTenSV" Canvas.Top="110" Width="150"/>

        <TextBox x:Name="txtTimKiem" Canvas.Left="560" Canvas.Top="215" 
                 Width="120" Height="25" VerticalContentAlignment="Center"/>

        <DatePicker Canvas.Left="250" Name="dpNgaySinh" Canvas.Top="140" Width="120" Height="25"/>

        <StackPanel Canvas.Left="250" Canvas.Top="175" Orientation="Horizontal">
            <RadioButton Name="radNam" Content="Nam" GroupName="GioiTinh" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton Name="radNu" Content="Nữ" GroupName="GioiTinh"/>
        </StackPanel>

        <TextBox Canvas.Left="250" Name="txtDiaChi" Canvas.Top="200" Width="120" Height="25" VerticalContentAlignment="Center"/>

        <Label Name="lbl_eMaSV" Content="" Canvas.Left="410" Canvas.Top="80" Foreground="Red"/>
        <Label Name="lbl_eTenSV" Content="" Canvas.Left="410" Canvas.Top="110" Foreground="Red"/>
        <Label Name="lbl_eNgaySinh" Content="" Canvas.Left="410" Canvas.Top="140" Foreground="Red"/>

        <DataGrid x:Name="dgDanhSachSV" Height="220" Width="680" AutoGenerateColumns="False" 
                  HorizontalAlignment="Left" Canvas.Top="250" Canvas.Left="60"
                  SelectionChanged="SelectSanpham" ColumnHeaderStyle="{StaticResource myheader}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SV" Binding="{Binding MaSV}" Width="80"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding TenSV}" Width="180"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="80"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnThem" Content="Thêm" Canvas.Left="60" Canvas.Top="500" Click="btnThem_Click"/>
        <Button x:Name="btnXoa" Content="Xóa" Canvas.Left="150" Canvas.Top="500" Click="btnXoa_Click" />
        <Button x:Name="btnCapnhat" Content="Sửa" Canvas.Left="240" Canvas.Top="500" Click="btnCapnhat_Click"/>
        <Button x:Name="btnXoatextbox" Content="Nhập lại" Canvas.Left="330" Canvas.Top="500" Click="btnXoatextbox_Click"/>
        <Button x:Name="btnDong" Content="Đóng" Canvas.Left="640" Canvas.Top="500" Width="100" Click="btnDong_Click"/>
        <Button Content="Tìm" Canvas.Left="690" Canvas.Top="215" 
                Width="50" Height="25" Click="btnTimKiem_Click"
                Background="Orange" Foreground="White" FontWeight="Bold"/>

        
    </Canvas>
</Window>